<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" id="BorderPane" fx:id="settingsPane" maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="419.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/2.2" fx:controller="uk.org.il2ssd.jfx.SettingsPresenter">
    <bottom>
        <BorderPane prefHeight="-1.0" prefWidth="-1.0">
            <center>
                <TableView fx:id="difficultyTable" editable="true" prefHeight="-1.0" prefWidth="-1.0"
                           tableMenuButtonVisible="false">
                    <columns>
                        <TableColumn editable="false" maxWidth="5000.0" minWidth="10.0" prefWidth="333.0"
                                     resizable="false" text="Setting" fx:id="diffSettingColumn"/>
                        <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="60.0" resizable="false" text="Value"
                                     fx:id="diffValueColumn"/>
                    </columns>
                    <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </BorderPane.margin>
                </TableView>
            </center>
            <right>
                <VBox id="difficultycontrols" prefHeight="200.0" prefWidth="106.0" spacing="15.0">
                    <children>
                        <Button fx:id="getDifficultyButton" disable="true" mnemonicParsing="false" prefHeight="25.0"
                                prefWidth="100.0" text=" Get"/>
                        <Button fx:id="setDifficultyButton" disable="true" mnemonicParsing="false" prefHeight="25.0"
                                prefWidth="100.0" text=" Put"/>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="70.0"/>
                    </padding>
                    <BorderPane.margin>
                        <Insets/>
                    </BorderPane.margin>
                </VBox>
            </right>
            <top>
                <VBox fillWidth="true" prefHeight="-1.0" prefWidth="-1.0" spacing="0.0">
                    <children>
                        <Label alignment="CENTER_LEFT" text="Difficulty Settings" textAlignment="LEFT"
                               underline="true"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="5.0" top="5.0"/>
                    </padding>
                    <BorderPane.margin>
                        <Insets/>
                    </BorderPane.margin>
                </VBox>
            </top>
        </BorderPane>
    </bottom>
    <top>
        <VBox fillWidth="true" prefHeight="199.0" prefWidth="262.0" spacing="10.0">
            <children>
                <Label text="Server Settings" underline="true"/>
                <GridPane hgap="5.0" vgap="5.0">
                    <children>
                        <TextField fx:id="ipAddressField" prefWidth="-1.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="0"/>
                        <Label labelFor="$ipAddressField" text="IP Address:" GridPane.columnIndex="0"
                               GridPane.halignment="RIGHT" GridPane.rowIndex="0"/>
                        <TextField fx:id="portField" prefWidth="-1.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Label labelFor="$portField" text="Port:" GridPane.columnIndex="0" GridPane.halignment="RIGHT"
                               GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                        </Label>
                        <Label text="Server Path:" textAlignment="LEFT" GridPane.columnIndex="0"
                               GridPane.halignment="RIGHT" GridPane.rowIndex="2">
                            <labelFor>
                                <Label fx:id="serverPathLabel" text="..." textOverrun="CLIP" GridPane.columnIndex="1"
                                       GridPane.rowIndex="2"/>
                            </labelFor>
                        </Label>
                        <fx:reference source="serverPathLabel"/>
                        <Button fx:id="serverPathButton" mnemonicParsing="false" text="Select il2server.exe"
                                GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </children>
                    <columnConstraints>
                        <ColumnConstraints fillWidth="false" halignment="RIGHT" hgrow="SOMETIMES" maxWidth="189.0"
                                           minWidth="10.0" prefWidth="66.0"/>
                        <ColumnConstraints fillWidth="false" halignment="LEFT" hgrow="SOMETIMES" maxWidth="405.0"
                                           minWidth="10.0" prefWidth="399.0"/>
                    </columnConstraints>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                </GridPane>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </top>
</BorderPane>
